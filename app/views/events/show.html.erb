<div class="card mt-2">
  <div class="card-header bg-primary">
    <h1 class="text-center text-white fw-bolder">
      <%= @event.name %>
    </h1>
    <p class="text-center text-white">
      Időpontja: <%= l @event.date %>
    </p>
  </div>
  <div class="card-body">
    <div class="mb-4 mt-2">
      <%= @event.description %>
    </div>
    <% if @event.event_type %>
      <div class="d-flex justify-content-end mb-2">
        <%= link_to 'Jelentkezek!', register_to_event_path(@event), class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="card-footer bg-primary">
    <div class="button-collection">
      <div class="d-flex justify-content-between">
        <%= link_to 'Vissza', events_path, class: "btn btn-success" %>
        <% if admin_signed_in? %>
          <%= link_to 'Módosítás', edit_event_path(@event), class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
