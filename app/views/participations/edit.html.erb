<h1>Regisztrációs adatok módosítása</h1>

<div class="row">
  <div class="col-12 col-md-6">
    <%= react_component("EventRegistrationForm",
                        { schema: @event_type.schema,
                          uischema: @event_type.uischema,
                          token: form_authenticity_token,
                          eventId: @participation.event_id,
                          form_data: @participation.form_data.to_json,
                          url: participation_path(@participation),
                          method: 'PUT'
                        },
                        { prerender: true }) %>

  </div>
</div>



<%= link_to 'Show', @participation %> |
<%= link_to 'Back', participations_path %>
