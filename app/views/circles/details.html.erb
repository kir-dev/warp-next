<div class="mb-5">
  <div class="is-flex is-flex-wrap-wrap">
    <div class="is-size-2">
      <%= @circle.name %>
    </div>
  </div>
  <div class="my-2">
    <figure class="image is-4by3">
      <%= link_to circle do %>
        <%= image_tag url_for(circle.thumbnail), class: "album-card-thumbnail" %>
      <% end %>
    </figure>
  </div>
</div>

<% if @circle.memberships.empty? then %>
  <p class="my-6">Nincsenek tagok.</p>
<% else if logged_in_as_admin_of(@circle)? then %>
  <div class="users-table my-5">
    <table class="table is-hoverable is-striped is-fullwidth">
      <thead>
        <tr>
          <th>Név</th>
          <th>E-mail</th>
          <th>Belépés ideje</th>
          <% if logged_in_as_admin_of(@circle)? then %>
            <th></th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @circle.memberships.each do |membership| %>
          <tr>
            <td><%= link_to membership.user.name, membership.user %></td>
            <td><%= membership.user.email %></td>
            <td><%= l membership.user.created_at %></td>
            <% if logged_in_as_admin_of(@circle)? then %>
              <td class="has-text-right">
                <%= link_to membership, method: :delete, data: { confirm: 'Valóban törlöd a tagságát a felhasználónak?' }, class: "button is-small is-danger" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" height="16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                  </svg>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
