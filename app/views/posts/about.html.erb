<%# Header %>
<% content_for :header do %>
  <header class="mb-4 mt-3">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 text-center">
          <h1 class="fs-1">Rólunk</h1>
          <p class="fs-4">Schönherz Airsoft Team</p>
        </div>
      </div>
    </div>
  </header>
<% end %>

<%# Button for admins %>
<% if admin_signed_in? %>
<div class="row justify-content-center mb-3">
  <div class="col-lg-8 col-md-10 col-12">
    <%= link_to 'Módosítás', edit_post_path(@post), class: "btn btn-primary float-end" %>
  </div>
</div>
<% end %>

<%# Content %>
<div class="row justify-content-center">
  <div class="col-lg-8 col-md-10 col-12">
    <%= @post.formatted_document %>
  </div>
</div>
